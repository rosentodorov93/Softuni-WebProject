@model AddIngredientViewModel


@{
    ViewBag.Title = "Choose Ingredient";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form asp-controller="Recipe" asp-action="AddIngredient" method="post">
   
            <input type="hidden" asp-for="@Model.RecepieId" value="@Model.RecepieId" />
            <div class="mb-3">
                <label asp-for="@Model.Ingredient.FoodId" class="form-label">Foods</label>
                <select asp-for="@Model.Ingredient.FoodId" class="form-control">
                    
                    @foreach (var food in Model.Foods)
                    {
                        <option value="@food.Id">@food.Name</option>
                    }
                </select>

            </div>
            <div class="mb-3">
                <label asp-for="@Model.Ingredient.Amount" class="form-label">Amount</label>
                <input id="servings" asp-for="@Model.Ingredient.Amount" class="form-control" value="" />
                <span asp-validation-for="Ingredient.Amount" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <input class="btn btn-primary" type="submit" value="Save" />
            </div>
        </form>
    </div>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}

