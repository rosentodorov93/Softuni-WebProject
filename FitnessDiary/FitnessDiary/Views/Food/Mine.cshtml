@using FitnessDiary.Infrastructure.Data.Enums
@model MinePageViewModel
@{
    ViewBag.Title = "My foods";
}

<h2 class="text-center">@ViewBag.Title</h2>

<hr />

<form method="get">
    <div class="row">
        <div class="form-group col-md-4">
            <div class="form-group">
                <label asp-for="Type"></label>
                <select asp-for="Type" class="form-control">
                    <option value="">All</option>

                    @foreach (var type in Model.Types)
                    {
                        <option value="@type">@type</option>
                    }
                </select>
            </div>
        </div>

        <div class="form-group col-md-4">
            <label asp-for="SearchTerm"></label>
            <input asp-for="SearchTerm" class="form-control" placeholder="BMW 640D, etc...">
        </div>

        <div class="form-group col-md-4">
            <div class="form-group">
                <label asp-for="Sorting"></label>
                <select asp-for="Sorting" class="form-control">
                    <option value="0" selected>Name</option>
                    <option value="1">Type</option>
                    <option value="2">Calories</option>
                </select>
            </div>
        </div>
    </div>
</form>

<div class="row mb-5">
    <div class="col-md-6">
        <a class="btn btn-primary @(Model.CurrentPage == 1 ? "disabled" : string.Empty)"
           asp-controller="Food"
           asp-action="Mine"
           asp-route-currentPage="@Model.PreviousPage"
           asp-route-brand="@Model.Type"
           asp-route-searchTerm="@Model.SearchTerm"
           asp-route-sorting="@((int)Model.Sorting)"><<</a>
    </div>

    @{
        var shouldButtonBeDisabled = Model.CurrentPage == Model.MaxPage ||
        !Model.Foods.Any();
    }

    <div class="col-md-6">
        <a class="btn btn-primary float-sm-right @(shouldButtonBeDisabled ? "disabled" : string.Empty)" style="margin-top: 10px"
           asp-controller="Food"
           asp-action="Mine"
           asp-route-currentPage="@(Model.CurrentPage + 1)"
           asp-route-brand="@Model.Type"
           asp-route-searchTerm="@Model.SearchTerm"
           asp-route-sorting="@((int)Model.Sorting)">>></a>
    </div>
</div>

<div class="card">
    <div class="card-header">
        <h3 class="card-title">My Foods real</h3>
    </div>

    <div class="card-body table-responsive p-0">
        <table class="table table-hover text-nowrap">
            <thead>
                <tr>
                    <th>Type</th>
                    <th>Name</th>
                    <th>Unit</th>
                    <th>Calories</th>
                    <th>Carbs</th>
                    <th>Proteins</th>
                    <th>Fats</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var food in Model.Foods)
                {
                    <tr>
                        <td>@food.Type</td>
                        <td>@food.Name</td>
                        <td>@((MeassureUnitType)food.MeassureUnit)</td>
                        <td>@food.Calories</td>
                        <td>@food.Carbohydtrates</td>
                        <td>@food.Proteins</td>
                        <td>@food.Fats</td>
                        <td>
                            <a asp-controller="Food" asp-action="Edit" asp-route-id="@food.Id">Edit</a>
                            <a onclick='DeleteFood(&quot;@food.Id&quot;);' class="btn btn-primary">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <a asp-controller="Food" asp-action="AddToMine" class="btn btn-primary">Add My Food</a>
</div>

@section Scripts{
    <script>
        function DeleteFood(id) {
            let isConfirmed = confirm('Are you sure you want to delete this item ?');
            if (isConfirmed) {
                $.ajax({
                    contentType: 'application/json; charset=utf-8',
                    dataType: 'json',
                    type: "POST",
                    url: "https://localhost:7043/Food/Delete",
                    data: JSON.stringify(id),
                    success: function(result) {
                        window.location = "https://localhost:7043/Food/Mine";
                    }
                });
            }
        };
    </script>
}