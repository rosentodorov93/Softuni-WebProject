@model CreateViewModel

@{
    ViewBag.Title = "Create New Recepie";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form asp-controller="Recepie" asp-action="Add" method="post">
            <input type="hidden" asp-for="UserId" value="@ViewBag.UserId"/>
            <div class="mb-3">
                <label asp-for="@Model.Name" class="form-label">Name</label>
                <input id="name" asp-for="@Model.Name" class="form-control" aria-required="true" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="@Model.Unit" class="form-label">Genre</label>
                <select asp-for="@Model.Unit" class="form-control">
                    <option value="1">per 100gs</option>
                    <option value="2">per item</option>
                </select>
                <span asp-validation-for="Unit" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.ServingsSize" class="form-label">ServingSize</label>
                <input id="servings" asp-for="@Model.ServingsSize" class="form-control" value="" />
                <span asp-validation-for="ServingsSize" class="text-danger"></span>
            </div>

            <div class="mb-3">

                <input class="btn btn-primary" type="submit" value="Save" />
            </div>
        </form>


    </div>
</div>


