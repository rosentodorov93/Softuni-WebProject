@model AllArticlesQueryModel

<div>

    <div class="mt-3">
        <form method="get">
            <div class="input-group col-4 mb-5">
                <select asp-for="@Model.CategoryFilter" class="form-control">
                    <option value="">All</option>
                    @foreach (var category in Model.Categories)
                    {
                        <option value="@category.Name">@category.Name</option>
                    }
                </select>
                <button type="submit" class="btn btn-outline-primary">Filter</button>
            </div>
        </form>
    </div>
    <div class="d-flex justify-content-center gap-4 p-5">
        @if (Model.Articles.Any())
        {
            foreach (var article in Model.Articles)
            {
                <div class="col-3">
                    <div class="card card-primary">
                        <div class="card-header">
                            <h5 class="card-title">@article.Title</h5>
                        </div>
                        <div style="width: 100%; height: 200px">
                            <img src="@article.ImageUrl" alt="@article.Title" class="w-100 h-100">
                        </div>
                        <div class="card-body">
                            <p class="card-text">Category: @article.Category</p>
                            <p class="card-text">Author: @article.Author</p>
                            <p class="card-text">Date: @article.Date</p>

                            <a asp-controller="Article" asp-action="Details" asp-route-id="@article.Id" class="btn btn-outline-success btn-sm">Read More</a>
                        </div>
                    </div>
                </div>
            }

        }
        else
        {
            <p>No results!</p>
        }
    </div>
</div>

