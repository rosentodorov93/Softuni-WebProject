@model AllArticlesQueryModel

<div>

    <div class="mt-3 p-3">
        <form method="get">
            <div class="input-group col-4 mb-5">
                <select asp-for="@Model.CategoryFilter" class="form-control">
                    <option value="">All</option>
                    @foreach (var category in Model.Categories)
                    {
                        <option value="@category.Name">@category.Name</option>
                    }
                </select>
                <button type="submit" class="btn btn-outline-primary">Filter</button>
            </div>
        </form>
    </div>

    </div>
    <div class="row g-5">
        @if (Model.Articles.Any())
        {
            foreach (var article in Model.Articles)
            {
                <div class="col-lg-4">
                    <div class="blog-item">
                        <div class="position-relative overflow-hidden rounded-top">
                            <img src=@article.ImageUrl alt="" width="100%" height="200px">
                        </div>
                        <div class="bg-dark d-flex align-items-center rounded-bottom p-4">
                            <div class="flex-shrink-0 text-center text-secondary border-end border-secondary pe-3 me-3">
                                <span>@article.Date.Day</span>
                                <h6 class="text-light text-uppercase mb-0">@article.Date.Month</h6>
                                <span>@article.Date.Year</span>
                            </div>
                            <h4><a class="h5 text-uppercase text-light" asp-area="" asp-controller="Article" asp-action="Details" asp-route-id="@article.Id">@article.Title</a></h4>
                        </div>
                    </div>
                </div>
            }

        }
        else
        {
            <p>No results!</p>
        }
    </div>
</div>

