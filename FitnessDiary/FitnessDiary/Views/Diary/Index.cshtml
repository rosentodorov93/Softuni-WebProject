@model IdexViewQueryModel

@{
    ViewBag.Title = "Your records for";
}


<h1 class="text-center">@ViewBag.Title @Model.CurrentDayDate</h1>

<h3>Breakfast</h3>
<ul class="list-group">
    @foreach (var serving in Model.Breakfast)
    {
        <li class="list-group-item">
            @serving.Name
            @serving.Amount
            @serving.Nutrition.Calories,
            @serving.Nutrition.Carbs,
            @serving.Nutrition.Protein,
            @serving.Nutrition.Fats,
            <a asp-controller="Diary" asp-action="RemoveServing" asp-route-id="@serving.Id" type="btn">Remove</a>
        </li>
    }
</ul>
<h3>Lunch</h3>
<ul class="list-group">
    @foreach (var serving in Model.Lunch)
    {
        <li class="list-group-item">
            @serving.Name
