            @serving.Nutrition.Calories,
            @serving.Nutrition.Carbs,
            @serving.Nutrition.Protein,
            @serving.Nutrition.Fats,
            <a asp-controller="Diary" asp-action="RemoveServing" asp-route-id="@serving.Id" type="btn">Remove</a>
        </li>
    }
</ul>
