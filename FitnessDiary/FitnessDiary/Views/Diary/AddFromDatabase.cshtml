@model AddServingViewModel

@{
    ViewBag.Title = "Add food from Database";
}

<h1 class="text-center">@ViewBag.Title</h1>


<form asp-controller="Diary" asp-action="AddFromDatabase" method="post">
    <div class="row">
        <div class="mb-3">
            <label asp-for="@Model.Serving.Category" class="form-label">Category</label>
            <select asp-for="@Model.Serving.Category" class="form-control">
                <option value="Breakfast">Breakfast</option>
                <option value="Lunch">Lunch</option>
                <option value="Dinner">Dinner</option>
                <option value="Snack">Snack</option>
            </select>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.Serving.Id" class="form-label">Food</label>
            <select asp-for="@Model.Serving.Id" class="form-control">

                @foreach (var food in Model.Foods)
                {
                    <option value="@food.Id">@food.Name</option>
                }
            </select>

            <div class="mb-3">
                <input asp-for="Serving.Amount" type="text" />
            </div>

        </div>
    </div>
</form>