@model EditTamplateViewModel

<form asp-controller="Workout" asp-action="EditTamplate" method="post">
    <div>
        <h5 style="color:#ff6347">Edit Workout</h5>
        <hr />
        <div class="form-horizontal">

            <div class="form-group">
                <label asp-for="Name" class="control-label col-md-2">
                    Workout Name
                </label>
                <div class="col-md-4">
                    <input asp-for="Name" type="text" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <label asp-for="Description" class="control-label col-md-2">
                    Description
                </label>
                <div class="col-md-4">
                    <input asp-for="Description" type="text" id="description" name="description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>
        </div>
    </div>

    <div class="panel-body">
        <table class="table table-striped table-responsive">
            <thead>
                <tr>
                    <td>Exercise Name </td>
                    <td>Body Part </td>
                    <td>Sets</td>
                </tr>
                <tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Exercises.Count; i++)
                {
                    <tr>
                        <td>@Html.EditorFor(modelItem => Model.Exercises[i].Name) </td>
                        <td>
                            @Html.DropDownListFor(modelItem => Model.Exercises[i].BodyPart, new[] {
                        new SelectListItem() {Text = "Chest", Value = "Chest"},
                        new SelectListItem() {Text = "Back", Value = "Back"},
                        new SelectListItem() {Text = "Legs", Value = "Legs"},
                        new SelectListItem() {Text = "Shoulder", Value = "Shoulders"},
                        new SelectListItem() {Text = "Bicep", Value = "Biceps"},
                        new SelectListItem() {Text = "Tricep", Value = "Triceps"},
                        })
                        </td>
                        <td>@Html.EditorFor(modelItem => Model.Exercises[i].SetCount)</td>
                        <td>
                            <a asp-controller="Workout" asp-action="RemoveExercise" asp-route-id="@Model.Exercises[i].Id">Remove</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
    <div>
        <button type="submit" class="btn btn-primary">Save Workout </button>
    </div>
</form>