@{
    ViewData["Title"] = "Home Page";
}

<div class="mt-4 p-5 bg-light text-center">
    <h2 class="display-4">Hello, Admin!</h2>
    <p class="lead mb-1 mt-3">
        This is your administrator area - you can <b>read</b>, <b>create</b>,
        <b>delete</b> and <b>edit</b> articles and food databse.
        
    </p>
    <p class="lead mt-1">
        You can also see <b>all users ,articles</b> and <b>all foods</b> in the system.
    </p>
    <hr class="my-4">
    <a asp-area="" asp-controller="Food" asp-action="All"
       class="btn btn-primary btn-lg">All Foods</a>
    <a asp-area="" asp-controller="Food" asp-action="Add"
       class="btn btn-primary btn-lg">Add Food in database</a>
    <span>  |   </span>
    <a asp-area="Admin" asp-controller="Houses" asp-action="Mine"
       class="btn btn-primary btn-lg">My Added Foods</a>
    <span>  |   </span>
    <a asp-area="Admin" asp-controller="Articles" asp-action="All"
       class="btn btn-primary btn-lg">All Articles</a>
        <a asp-area="Admin" asp-controller="Articles" asp-action="Add"
       class="btn btn-primary btn-lg">Add Article</a>
    <a asp-area="Admin" asp-controller="Users" asp-action="All"
       class="btn btn-primary btn-lg">All Users</a>
       <a asp-area="Admin" asp-controller="Users" asp-action="Add"
       class="btn btn-primary btn-lg">Create User</a>
</div>
