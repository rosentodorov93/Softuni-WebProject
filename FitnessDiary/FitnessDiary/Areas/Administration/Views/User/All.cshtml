@model IEnumerable<AllUsersViewModel>

@{
    ViewBag.Title = "All Users";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<table class="table table-striped">
    <thead>
        <tr>
            <th><label>Username</label></th>
            <th><label>Email</label></th>
            <th><label>Roles</label></th>
            <th><label>Actions</label></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td><label>@user.Username</label></td>
                <td><label>@user.Email</label></td>
                <td>
                    @if (user.Roles != string.Empty)
                    {
                        <label>@user.Roles</label>
                    }
                    else
                    {
                        <label class="text-center">None</label>
                    }
                </td>
                <td>
                    <a asp-area="Administration" asp-controller="User" asp-action="AddRole" asp-route-id="@user.Id" class="btn btn-primary">Add Role</a>
                </td>
            </tr>
        }
    </tbody>
</table>

