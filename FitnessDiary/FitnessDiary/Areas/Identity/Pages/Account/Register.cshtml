@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}



<div class="register-page">
    <div class="register-box">
        <div class="register-logo">
            <a asp-area="" asp-controller="Home" asp-action="Index"><b>Admin</b>LTE</a>
        </div>
        <div class="card">
            <div class="card-body register-card-body">
                <form method="post">
                    <div class="row">
                        <div class="form-group col-6">
                            <label asp-for="Input.Username" for="username">Username</label>
                            <input asp-for="Input.Username" id="username" class="form-control" type="text" />
                            <span asp-validation-for="Input.Username" class="text-danger"></span>
                        </div>
                        <div class="form-group col-6">
                            <label asp-for="Input.Email" for="email">Email</label>
                            <input asp-for="Input.Email" id="email" class="form-control" type="email" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="form-group col-6">
                            <label asp-for="Input.Password" for="password">Password</label>
                            <input asp-for="Input.Password" id="password" class="form-control" type="password" />
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <div class="form-group col-6">
                            <label asp-for="Input.ConfirmPassword" for="confirmpassword">Confirm Password</label>
                            <input asp-for="Input.ConfirmPassword" id="confirmpassword" class="form-control" type="password" />
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>
                        <div class="form-group col-6">
                            <label asp-for="Input.FullName" for="fullname">Full Name</label>
                            <input asp-for="Input.FullName" id="fullname" class="form-control" type="text" />
                            <span asp-validation-for="Input.FullName" class="text-danger"></span>
                        </div>
                        <div class="form-group col-6">
                            <label asp-for="Input.Age" for="age">Age</label>
                            <input asp-for="Input.Age" id="age" class="form-control" type="number" />
                            <span asp-validation-for="Input.Age" class="text-danger"></span>
                        </div>
                        <div class="form-group col-6">
                            <label asp-for="Input.Height" for="height">Height</label>
                            <input asp-for="Input.Height" id="height" class="form-control" type="number" />
                            <span asp-validation-for="Input.Height" class="text-danger"></span>
                        </div>
                        <div class="form-group col-6">
                            <label asp-for="Input.Weight" for="weight">Weight</label>
                            <input asp-for="Input.Weight" id="weight" class="form-control" type="number" />
                            <span asp-validation-for="Input.Weight" class="text-danger"></span>
                        </div>
                        <div class="form-group col-6">
                            <label asp-for="Input.Gender" class="form-label">Gender</label>
                            <select asp-for="Input.Gender" class="form-control">
                                <option value="1">Male</option>
                                <option value="2">Female</option>
                            </select>
                            <span asp-validation-for="Input.Gender" class="text-danger"></span>
                        </div>
                        <div class="form-group col-6">
                            <label asp-for="Input.ActivityLevelId" class="form-label">Activity Level</label>
                            <select asp-for="Input.ActivityLevelId" class="form-control">
                                @foreach (var al in this.Model.ActivityLevels)
                                {
                                    <option value="@al.Id">@al.Type</option>
                                }
                            </select>

                        </div>
                        <div class="form-group col-6">
                            <label asp-for="Input.FitnessGoal" class="form-label">Fitness Goal</label>
                            <select asp-for="Input.FitnessGoal" class="form-control">
                                <option value="1">Lose Weight</option>
                                <option value="2">Gain Weight</option>
                                <option value="3">Maintain Weight</option>
                            </select>
                            <span asp-validation-for="Input.FitnessGoal" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="d-flex justify-content-center">

                        <div class="col-4">
                            <button type="submit" class="btn btn-primary btn-block">Register</button>
                        </div>

                    </div>
                </form>
                <a asp-area="Identity" asp-page="/Account/Login" class="text-center">I already have a membership</a>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
